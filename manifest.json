{
  "name": "Aardvark2",
  "description": "A quick repackaging of Karmatics Aardvark extension. Manifest-V3",
  "version": "3.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Launch Aardvark Page Editor",
    "default_icon": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "allinone.js",
        "aardvark.gif",
        "aardvarkhelp.gif",
        "closedbox.gif",
        "aardvarkStrings.js",
        "aardvarkUtils.js",
        "aardvarkDBox.js",
        "aardvarkCommands.js",
        "aardvarkMain.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "manifest_version": 3
}
