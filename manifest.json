{
  "name": "Aardvark2",
  "description": "A quick repackaging of Karmatics Aardvark extension",
  "version": "1.1",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "browser_action": {
      "default_title": "Launch Aardvark Page Editor",
      "default_icon": "icon.png"
  },
  "web_accessible_resources": ["allinone.js"],
  "manifest_version": 2
}
